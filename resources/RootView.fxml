<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="455.0" prefWidth="634.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.architecture.controller.RootViewController">
    <center>
        <VBox alignment="CENTER" spacing="30.0">
         <children>
             <Label text="Simulador ALU" />
            <HBox alignment="CENTER" prefHeight="92.0" prefWidth="352.0">
                <children>
                    <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                            <!-- <div>Iconos diseñados por <a href="https://www.hiclipart.com/free-transparent-background-png-clipart-jqncc/download> -->
                            <Image url="@images/image.png" />
                        </image>
                    </ImageView>
                </children>
            </HBox>
            <GridPane>
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="168.0" minWidth="10.0" prefWidth="123.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="229.0" minWidth="10.0" prefWidth="229.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Label text="Dirección 1" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1">
                     <children>
                        <TextField fx:id="direction1Field" promptText="Ingresa la dirección 1" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" GridPane.rowIndex="1">
                     <children>
                        <Label text="Dirección 2" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                     <children>
                        <TextField fx:id="direction2Field" promptText="Ingresa la dirección 2" />
                     </children></HBox>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" GridPane.rowIndex="2">
                     <children>
                        <Label text="Operación" />
                     </children></HBox>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
                     <children>
                        <ComboBox fx:id="comboBox" prefHeight="28.0" prefWidth="163.0" promptText="Operación" />
                     </children></HBox>
               </children>
            </GridPane>
            <Button mnemonicParsing="false" prefHeight="28.0" prefWidth="141.0" text="Operar" onAction="#handleOperateButton" />
         </children></VBox>
    </center>
    <right>
        <VBox alignment="CENTER" spacing="10">
            <Label text="Stack" />
            <TableView fx:id="directionsTableView">
            <columns>
               <TableColumn fx:id="directionTableColumn" prefWidth="75.0" text="Direccion" />
               <TableColumn fx:id="valueTableColumn" prefWidth="75.0" text="Valor" />
            </columns>
            <columnResizePolicy>
               <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy></TableView>
            <Label text="Banderas" />
            <TableView fx:id="flagsTableView">
            <columns>
               <TableColumn fx:id="flagTableColumn" prefWidth="75.0" text="Bandera" />
               <TableColumn fx:id="stateTableColumn" prefWidth="75.0" text="Estado" />
            </columns>
            <columnResizePolicy>
               <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy></TableView>
        </VBox>
    </right>

</BorderPane>
